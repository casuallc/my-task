<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView android:id="@id/title_bar_name"
		    android:layout_width="wrap_content"
		    android:layout_height="match_parent"
		    android:textSize="25sp"
		    android:gravity="center"
		    android:layout_marginStart="5dp"/>
        
        <Button android:id="@id/day_task_refresh"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:visibility="gone"
	        android:layout_toStartOf="@id/day_task_add"
	        android:background="@drawable/refresh"/>
        
        <Button android:id="@id/day_task_add"
	        android:layout_width="50dp"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_alignParentEnd="true"
	        android:background="@drawable/add"/>
    </RelativeLayout>
    
    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="@color/titlebar_bg"/>
    
    <ListView android:id="@id/day_task_tasklist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></ListView>
    
</LinearLayout>
